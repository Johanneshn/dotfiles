# Basic Settings
set shell powershell
#set drawbox
set hidden true
set ignorecase true
set icons true
set mouse true
set number true
set relativenumber true

# Bindings
# Remove some defaults
map m
map o
map n
map "'"
map '"'
map <space>
map d

# Basic Functions
map . set hidden!
map <enter> open
map v :toggle
map C clear
map R reload

# Movement
map gd cd ~/documents
map gD cd ~/downloads
map gp cd ~/pictures
map gv cd ~/videos
map gc cd ~/.config
map ga cd ~/AppData

# Open Files
map n $nvim $Env:f
map c $code $Env:f

#Open with lazygit
map L $lazygit

# Previewing with Quicklook
map <space> $C:/Users/WSwor/AppData/Local/Programs/QuickLook/QuickLook.exe $Env:f
